<Layout title="Tenuta Le Tre Rose Dove Siamo">
  <div class="container mx-auto w-full sm:w-auto text-center">
    <div class="flex flex-col sm:flex-row gap-4 items-center justify-center">
      <div class="flex flex-col gap-4">
        <h1
          class="text-2xl text-center block shrink-0 mx-auto my-8 italic font-serif text-tltr-900"
        >
          Dove Siamo
        </h1>
        <p class="block">Via Grizzosa 9 84079 Vibonati (SA)</p>
        <a
          href="https://maps.app.goo.gl/FDpbV1i4pUFYgyTS9"
          target="_black"
          class="bg-tltr-900 text-tltr-50 p-4 block w-44 mx-auto rounded-lg flex items-center justify-center gap-4 hover:bg-tltr-700"
        >
          <Icon name="bx:map" class="text-3xl" />
          <p>Apri Mappa</p>
        </a>
      </div>
      <iframe
        class="px-8 my-16 rounded-lg w-full border-0"
